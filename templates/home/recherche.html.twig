{% extends 'base.html.twig' %}

{% block title %}Résultats de la recherche{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center">
        <h2>Résultats pour "{{ localisation }}"</h2>
        {# Bouton qui redirige vers la page d'accueil #}
        <a href="{{ path('home') }}" class="btn btn-secondary">Retour à l'accueil</a>
    </div>
    
    {% if annonces is not empty %}
        <div class="row">
            {% for annonce in annonces %}
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ annonce.titre }}</h5>
                            <p class="card-text">{{ annonce.description }}</p>
                            <a href="{{ path('app_annonce_show', {'id': annonce.id}) }}" class="btn btn-primary">Voir plus</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>Aucune annonce trouvée pour "{{ localisation }}".</p>
    {% endif %}
</div>
{% endblock %}




